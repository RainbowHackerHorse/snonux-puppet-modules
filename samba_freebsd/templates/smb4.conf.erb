# Global parameters
[global]
workgroup = <%= @workgroup %>
server string = %h server
dns proxy = no
security = share
guest only = yes
load printers = no
usershare allow guests = yes

<% @volumes.each_pair do |name, hash| %>
[<%= name %>]<% hash.each_pair do |k,v| %>
<%= k %> = <%= v %><% end %> 
<% end %>

